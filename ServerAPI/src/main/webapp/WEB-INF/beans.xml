<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-jaxrs-binding.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <context:component-scan base-package="com.ideas.api.server.services"/>

    <jaxrs:server id="services" address="/">
        <jaxrs:serviceBeans>
            <ref bean="ideas"/>
            <ref bean="document"/>
            <ref bean="component"/>
            <ref bean="componentType"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="ideas" class="com.ideas.api.server.services.IdeaService">
    </bean>

    <bean id="document" class="com.ideas.api.server.services.DocumentService">
        <property name="dynamicModelDao" ref="documentsDAO" />
    </bean>

    <bean id="component" class="com.ideas.api.server.services.ComponentService">
        <property name="dynamicModelDao" ref="componentDAO" />
    </bean>

    <bean id="componentType" class="com.ideas.api.server.services.ComponentTypeService">
        <property name="dynamicModelDao" ref="componentTypeDAO" />
    </bean>


    <bean id="mongo" class="com.mongodb.Mongo">
        <constructor-arg value="localhost"/>
    </bean>

    <bean id="db" class="com.ideas.persistance.DBFactory">
        <property name="mongo" ref="mongo"/>
        <property name="name" value="ideasDB"/>
    </bean>


    <bean id="ideasDAO" class="com.ideas.persistance.MongoCollectionDAO">
        <property name="db" ref="db"/>
        <property name="collectionName" value="ideas"/>
    </bean>

    <bean id="documentsDAO" class="com.ideas.persistance.MongoCollectionDAO">
        <property name="db" ref="db"/>
        <property name="collectionName" value="documents"/>
    </bean>

    <bean id="componentDAO" class="com.ideas.persistance.MongoCollectionDAO">
        <property name="db" ref="db"/>
        <property name="collectionName" value="component"/>
    </bean>

    <bean id="componentTypeDAO" class="com.ideas.persistance.MongoCollectionDAO">
        <property name="db" ref="db"/>
        <property name="collectionName" value="componentType"/>
    </bean>




